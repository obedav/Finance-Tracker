# Frontend Production Environment Configuration
# Copy this file to .env.production for production builds

# API Configuration - IMPORTANT: Update with your production API URL
VITE_API_BASE_URL=https://api.yourdomain.com/api
VITE_API_TIMEOUT=30000

# Application Configuration
VITE_APP_NAME="Finance Tracker"
VITE_APP_VERSION=1.0.0

# Feature Flags - Disable debug features in production
VITE_ENABLE_MOCK_API=false
VITE_ENABLE_DEBUG_LOGS=false

# Security Configuration - Enable in production
VITE_ENFORCE_HTTPS=true

# Error Tracking (Sentry) - IMPORTANT: Add your Sentry DSN
# Get your DSN from: https://sentry.io/settings/your-org/projects/your-project/keys/
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
VITE_ENABLE_SENTRY=true

# Analytics (Optional - add if using analytics)
# VITE_ANALYTICS_ID=
