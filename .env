# Frontend Environment Variables (Vite)

# Mock API Flag - ADD THIS LINE
VITE_USE_MOCK_API=true

# API Configuration
VITE_API_BASE_URL=http://localhost:3001/api
VITE_API_TIMEOUT=30000

# Application Configuration
VITE_APP_NAME=FinanceTracker
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Feature Flags
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_EXPORT_PDF=true
VITE_ENABLE_IMPORT_CSV=true
VITE_ENABLE_BUDGET_ALERTS=true
VITE_ENABLE_GOAL_TRACKING=true
VITE_ENABLE_MULTI_CURRENCY=true
VITE_ENABLE_ADVANCED_REPORTS=true
VITE_ENABLE_TWO_FACTOR_AUTH=false
VITE_ENABLE_REAL_TIME_SYNC=false

# Debug Settings
VITE_DEBUG_API=true
VITE_ENABLE_LOGGING=true

# File Upload Limits
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,text/csv,application/json

# Default Settings
VITE_DEFAULT_CURRENCY=USD
VITE_DEFAULT_DATE_FORMAT=MM/DD/YYYY
VITE_DEFAULT_THEME=light
VITE_DEFAULT_LANGUAGE=en

# Pagination
VITE_DEFAULT_PAGE_SIZE=15
VITE_MAX_PAGE_SIZE=100

# Rate Limiting
VITE_API_REQUESTS_PER_MINUTE=100
VITE_AUTH_REQUESTS_PER_MINUTE=10
VITE_FILE_UPLOADS_PER_HOUR=20

# Toast Notification Settings
VITE_TOAST_DURATION_SHORT=3000
VITE_TOAST_DURATION_MEDIUM=5000
VITE_TOAST_DURATION_LONG=7000
VITE_TOAST_POSITION=top-right

# Budget Alert Thresholds
VITE_BUDGET_WARNING_THRESHOLD=80
VITE_BUDGET_DANGER_THRESHOLD=100

# External Services (if needed in future)
# VITE_GOOGLE_ANALYTICS_ID=
# VITE_SENTRY_DSN=
# VITE_STRIPE_PUBLIC_KEY=